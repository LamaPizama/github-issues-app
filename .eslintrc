{
    "extends": [
        "react-app",
        "plugin:jest-dom/recommended"
    ],
    "plugins": [
        "jest-dom",
        "react-hooks"
    ],
    "rules": {
        "react-hooks/rules-of-hooks": "error",
        "react-hooks/exhaustive-deps": "warn",
        "semi": [
            "error",
            "never"
        ],
        "comma-dangle": [
            "error",
            "never"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "array-bracket-spacing": [
            "error",
            "always"
        ]
    }
}
